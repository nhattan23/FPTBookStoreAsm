@model List<FPTBookStore.Models.Book>
@{
    ViewData["Title"] = "Books By Category";
}

<style>
    .card-header {
        width: 200px; /* Kích thước cố định cho div */
        height: 300px;
        overflow: hidden; /* Ẩn nội dung vượt ra khỏi div */
        display: flex; /* Sử dụng flexbox để canh chỉnh nội dung bên trong */
        align-items: center; /* Canh chỉnh theo chiều dọc */
        justify-content: center; /* Canh chỉnh theo chiều ngang */
    }

        .card-header img {
            max-width: 100%; /* Giữ kích thước tối đa không vượt quá kích thước của div */
            max-height: 100%; /* Giữ kích thước tối đa không vượt quá kích thước của div */
            height: auto; /* Đảm bảo tỷ lệ khung hình của ảnh được giữ nguyên */
            width: auto; /* Đảm bảo tỷ lệ khung hình của ảnh được giữ nguyên */
            display: block; /* Chắc chắn rằng ảnh được hiểu là một khối phần tử (block) */
            margin: auto; /* Tự động căn giữa theo chiều ngang */
        }
</style>

<div class="container-fluid pt-5">
    <div class="text-center mb-4">
        <h2 class="section-title px-5"><span class="px-2">Book By Categories</span></h2>
    </div>
    <div class="row px-xl-5 pb-3">
        @foreach (var item in Model)
        {
            <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
                <div class="card product-item border-0 mb-4">
                    <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
                        <img class="img-fluid w-100" src="~/img/@item.Image" alt="@item.Image" style="width:30px height:30px ">
                    </div>
                    <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                        <h6 class="text-truncate mb-3">@item.BookName</h6>
                        <div class="d-flex justify-content-center">
                            <h6>$@item.Price</h6><h6 class="text-muted ml-2"><del>$123.00</del></h6>
                        </div>
                    </div>
                    <div class="card-footer d-flex justify-content-between bg-light border">
                        <a asp-action="BookDetails" asp-controller="Home" asp-route-bookID="@item.IdBook" class="btn btn-sm text-dark p-0"><i class="fas fa-eye text-primary mr-1"></i>View Detail</a>
                        <a asp-route="addcart" asp-route-productid="@item.IdBook" class="btn btn-sm text-dark p-0"><i class="fas fa-shopping-cart text-primary mr-1"></i>Add To Cart</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

