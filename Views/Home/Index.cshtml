<style>
    .card-header {
        width: 200px; /* Kích thước cố định cho div */
        height: 300px;
        overflow: hidden; /* Ẩn nội dung vượt ra khỏi div */
        display: flex; /* Sử dụng flexbox để canh chỉnh nội dung bên trong */
        align-items: center; /* Canh chỉnh theo chiều dọc */
        justify-content: center; /* Canh chỉnh theo chiều ngang */
    }

        .card-header img {
            max-width: 100%; /* Giữ kích thước tối đa không vượt quá kích thước của div */
            max-height: 100%; /* Giữ kích thước tối đa không vượt quá kích thước của div */
            height: auto; /* Đảm bảo tỷ lệ khung hình của ảnh được giữ nguyên */
            width: auto; /* Đảm bảo tỷ lệ khung hình của ảnh được giữ nguyên */
            display: block; /* Chắc chắn rằng ảnh được hiểu là một khối phần tử (block) */
            margin: auto; /* Tự động căn giữa theo chiều ngang */
        }
</style>

<!-- Navbar Start -->
<div class="container-fluid mb-5">
    <div class="row border-top px-xl-5">
